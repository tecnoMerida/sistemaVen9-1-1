      <script type="text/javascript">

                    function startTime() {
                        today = new Date();
                        H = today.getHours();
                        m = today.getMinutes();
                        s = today.getSeconds();
                        m = checkTime(m);
                        s = checkTime(s);
                        document.getElementById('reloj').innerHTML = H + ":" + m + ":" + s;
                        t = setTimeout('startTime()', 500);
                    }

                    function checkTime(i) {
                        if (i < 10) {
                            i = "0" + i;
                        }
                        return i;
                    }
                    window.onload = function() {
                        startTime();
                    }
      </script>
      <div id="reloj"
           style="font-size:16px; float:right;"></div>
